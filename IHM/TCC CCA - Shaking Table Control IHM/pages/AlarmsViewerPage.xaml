             34.59,29.28 34.62,27.03 32.00,27.03 Z
                            </Path.Data>
                        </Path>

                        <!--Stroke-->
                        <Path Stroke="Black" StrokeThickness="2">
                            <Path.Data>
                                M 32.06,43.56
           C 29.81,43.69 29.49,45.53 29.49,45.53
